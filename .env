# -------- App Info --------
APP_NAME="RAG system made by StrawHats"
APP_VERSION="1.0.0"

# -------- Llama Cloud Services --------
LLAMA_CLOUD_API="llx-fC0grse4dI4VQaDc4d9qh6yPyoF51EwWz6qVueK9qoXHsiQ0"
LLAMA_FAST_MODE=true
LLAMA_DISABLE_OCR=true
LLAMA_DISABLE_IMG=true
LLAMA_HIDE_HEADERS=true
LLAMA_HIDE_FOOTERS=true
LLAMA_LANGUAGE=en

# -------- Qdrant --------
QDRANT_URL="http://localhost:6333"
QDRANT_API_KEY="your_qdrant_api_key"
VECDB_CHUNKTABLE="rag-collection"
INDEX_HNSW_PARAMS='{"ef_construction": 200, "ef_search": 50}'

# -------- LLM (Groq) --------
GROQ_API_KEY="your_groq_api_key"
GROQ_MODEL="llama-3.1-8b-instant"
GROQ_TEMPERATURE=0.2
GROQ_MAX_TOKENS=1024

# -------- Embedding Model --------
EMBED_MODEL="BAAI/bge-base-en-v1.5"

# -------- Chunking --------
CHUNK_SIZE=512
CHUNK_OVERLAP=50
SENTENCE_SPLITTER="nltk"

# -------- Document Parser --------
PARSER="PyMuPDF"

# -------- Milvus Semantic Cache --------
ENABLE_MILVUS_CACHE=true
CACHE_DB_URI="http://localhost:19530"
CACHE_DB_TOKEN=""
CACHE_DB="milvus-cache"
CACHE_COSINE_THRESHOLD=0.1
CACHE_CONNECTION_TIMEOUT=3
INDEX_IVF_PARAMS='{"nlist": 1024, "metric_type": "COSINE"}'

# -------- SQLite Document DB --------
DATA_DIR="data"

# -------- Async --------
ASYNC_TIMEOUT=20

# -------- Limits --------
TOP_K_RETRIEVAL=3

# -------- Security --------
ENABLE_AUTH=true
API_KEY_HEADER="X-API-Key"
AUTH_TOKEN="a692774361df87466df8df0cbdecb1a9daca509b1a31d0948aad64b7b3ae5f12"

# -------- Logging --------
ENABLE_LOGGING=true
LOG_LEVEL="INFO"



